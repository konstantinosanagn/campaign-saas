{
  "name": "campaign_manager-frontend",
  "private": true,
  "version": "0.1.0",
  "dependencies": {
    "@rails/webpacker": "^5.4.4",
    "core-js": "^3.38.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react_ujs": "3.1.0",
    "tailwindcss": "^3.4.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7",
    "@babel/plugin-proposal-optional-chaining": "^7",
    "@babel/plugin-proposal-private-methods": "7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "@babel/plugin-transform-class-properties": "7.24.7",
    "@babel/plugin-transform-private-methods": "7.24.7",
    "@babel/plugin-transform-private-property-in-object": "7.24.7",
    "@babel/preset-env": "^7",
    "@babel/preset-react": "^7",
    "@babel/preset-typescript": "^7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "babel-loader": "8.3.0",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss-loader": "^4.3.0",
    "tail": "^2.2.6",
    "ts-jest": "^29.1.1",
    "ts-loader": "8.4.0",
    "types": "^0.1.1",
    "typescript": "^5.9.3",
    "webpack": "4.46.0",
    "webpack-dev-server": "3.11.3"
  },
  "engines": {
    "node": "16.x"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:components": "jest --coverage --collectCoverageFrom='app/javascript/components/**/*.{ts,tsx}' --testPathPattern='components' --coverageReporters=text --coverageReporters=text-summary"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/app/javascript"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/javascript/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/app/javascript/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.{ts,tsx}",
      "**/*.test.{ts,tsx}"
    ],
    "collectCoverageFrom": [
      "app/javascript/**/*.{ts,tsx}",
      "!app/javascript/**/*.d.ts",
      "!app/javascript/packs/**",
      "!app/javascript/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx",
            "baseUrl": "./app/javascript",
            "paths": {
              "@/*": [
                "*"
              ]
            },
            "target": "ES2019",
            "lib": [
              "DOM",
              "ES2020"
            ],
            "module": "ESNext",
            "moduleResolution": "Node",
            "noEmit": true,
            "isolatedModules": true,
            "strict": true,
            "resolveJsonModule": true,
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "skipLibCheck": true
          }
        }
      ]
    },
    "testTimeout": 10000,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
